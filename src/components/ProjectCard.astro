---
type Props = {
  title: string;
  description: string;
  href: string;
  image: string;
  imageAlt?: string;
};

const { title, description, href, image, imageAlt = title } = Astro.props;
---

<a
  href={href}
  class="group block overflow-hidden rounded-lg border border-border bg-card transition-all hover:border-accent hover:shadow-md"
>
  <div class="aspect-video overflow-hidden bg-muted">
    <img
      src={image}
      alt={imageAlt}
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>
  <div class="p-4">
    <h3 class="mb-2 text-lg font-semibold text-accent group-hover:underline">
      {title}
    </h3>
    <p class="text-sm text-muted-foreground">
      {description}
    </p>
  </div>
</a>
