---
type ProjectStatus = "concept" | "in-progress" | "case-study" | "live";

type Props = {
  title: string;
  description: string;
  href: string;
  image: string;
  imageAlt?: string;
  status?: ProjectStatus;
};

const {
  title,
  description,
  href,
  image,
  imageAlt = title,
  status,
} = Astro.props;
---

<a
  href={href}
  class="group relative block overflow-hidden rounded-lg border border-border bg-card transition-all hover:border-accent hover:shadow-md"
>
  {status && (
    <span class="absolute right-3 top-3 z-10 rounded-md border border-border bg-background/80 px-2 py-0.5 text-xs font-medium backdrop-blur">
      {status === "case-study" ? "Case study" : status}
    </span>
  )}

  <div class="aspect-video overflow-hidden bg-muted">
    <img
      src={image}
      alt={imageAlt}
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>

  <div class="p-4">
    <h3 class="mb-2 text-lg font-semibold text-accent group-hover:underline">
      {title}
    </h3>
    <p class="text-sm text-muted-foreground">
      {description}
    </p>
  </div>
</a>
