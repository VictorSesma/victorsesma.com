---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Victor Sesma
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>
       Golang backend engineer focused on system design, reliability, and AI-augmented
       engineering. I write case studies and practical notes—no hype, just
       trade-offs.
      </p>

      <ul class="mt-4 max-w-2xl list-disc space-y-1 ps-5">
        <li>Go (Golang) · distributed systems · pragmatic architecture</li>
        <li>Observability, incident-minded engineering, and production ergonomics</li>
        <li>Applied AI: constrained assistants, RAG, human-in-the-loop workflows</li>
      </ul>

      <div class="mt-5 flex flex-wrap gap-3">
        <LinkButton
          class="inline-block rounded-md border border-border px-4 py-2 hover:text-accent"
          href="/posts"
          >
         Read the blog
        </LinkButton>

        <LinkButton
          class="inline-block rounded-md border border-border px-4 py-2 hover:text-accent"
          href="/projects"
          >
          View projects
        </LinkButton>

        <LinkButton
          class="inline-block rounded-md border border-border px-4 py-2 hover:text-accent"
          href="/about"
          >
          About
        </LinkButton>
      </div>

        <a
          target="_blank"
          href="/rss.xml"
          class="mt-6 inline-block shrink-0"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <IconRss width={20} height={20} class="scale-125 stroke-accent stroke-3 rtl:-rotate-90" />
          <span class="sr-only">RSS Feed</span>
        </a>
      </div>

      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex max-sm:flex-col sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Find me:</div>
            <Socials />
          </div>
        )
      }
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
      
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
